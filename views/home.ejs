    <script>
        // Aquí se incorpora el script para manejar el arreglo y mostrar los productos
        const productos = [
            { id: 1, nombre: 'Producto 1', descripcion: 'Descripción del producto 1.', precio: '99.99', imagen: '/images/products/product5.webp' },
            { id: 2, nombre: 'Producto 2', descripcion: 'Descripción del producto 2.', precio: '149.99', imagen: '/images/products/product6.webp' },
            { id: 3, nombre: 'Producto 3', descripcion: 'Descripción del producto 3.', precio: '199.99', imagen: '/images/products/product7.webp' }
        ];

        function mostrarProductos() {
            const contenedorProductos = document.querySelector('.product-grid');
            if (contenedorProductos) {
                contenedorProductos.innerHTML = '';
                productos.forEach((producto) => {
                    const htmlProducto = `
                        <div class="product">
                            <img src="${producto.imagen}" alt="${producto.nombre}" />
                            <h3>${producto.nombre}</h3>
                            <p>${producto.descripcion}</p>
                            <a href="product-details.html?id=${producto.id}" class="btn">Ver detalles</a>
                        </div>
                    `;
                    contenedorProductos.innerHTML += htmlProducto;
                });
            }
        }

        document.addEventListener('DOMContentLoaded', mostrarProductos);
    </script>
