<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PCBlend - Productos</title>
    <link rel="stylesheet" href="../styles/main.css" />
    <link rel="stylesheet" href="../styles/products.css" />
    <link rel="stylesheet" href="../styles/chatbot.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    <header>
        <nav>
            <div class="logo">
                <a href="home.html"><img src="/images/logo.jpg" alt="PCBlend Logo" /></a>
            </div>
            <ul>
                <li><a href="home.html">Inicio</a></li>
                <li><a href="products.html" class="active">Productos</a></li>
                <li><a href="customization.html">Personalización</a></li>
                <li><a href="favorites.html">Favoritos</a></li>
                <li>
                    <a href="cart.html"><i class="fas fa-shopping-cart"></i> Carrito</a>
                </li>
            </ul>
            <div class="user-menu">
                <a href="login.html">Iniciar sesión</a>
                <a href="register.html">Registrarse</a>
            </div>
            <div class="menu-toggle">
                <i class="fas fa-bars"></i>
            </div>
        </nav>
    </header>

    <main class="container">
        <h1>Nuestros productos</h1>

        <div class="product-filters">
            <div class="filter-group">
                <label for="category">Categoría:</label>
                <select id="category" name="category">
                    <option value="">Todas las categorías</option>
                    <option value="procesadores">Procesadores</option>
                    <option value="tarjetas-graficas">Tarjetas gráficas</option>
                    <option value="placas-base">Placas base</option>
                    <option value="memoria-ram">Memoria RAM</option>
                    <option value="almacenamiento">Almacenamiento</option>
                    <option value="fuentes-alimentacion">
                        Fuentes de alimentación
                    </option>
                    <option value="refrigeracion">Refrigeración</option>
                    <option value="cajas">Cajas</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="min-price">Precio mínimo:</label>
                <input type="number" id="min-price" name="min-price" min="0" value="5000">
            </div>
            <div class="filter-group">
                <label for="max-price">Precio máximo:</label>
                <input type="number" id="max-price" name="max-price" min="0" value="100000">
            </div>
            <div class="filter-group">
                <label for="brand">Marca:</label>
                <select id="brand" name="brand">
                    <option value="">Todas las marcas</option>
                    <option value="intel">Intel</option>
                    <option value="amd">AMD</option>
                    <option value="nvidia">NVIDIA</option>
                    <option value="asus">ASUS</option>
                    <option value="msi">MSI</option>
                    <option value="gigabyte">Gigabyte</option>
                    <option value="corsair">Corsair</option>
                    <option value="kingston">Kingston</option>
                    <option value="seagate">Seagate</option>
                    <option value="western-digital">Western Digital</option>
                </select>
            </div>
            <button id="apply-filters" class="btn">Aplicar filtros</button>
        </div>

        <div class="product-grid">
            <section class="secciones">
                <ul>
                    <% productos.forEach((producto, index)=> { %>
                        <div class="card">
                            <div class="half-left">
                                <img src="<%= producto.imagen %>" alt="" style="width: 225px; height: 45%;"/>
                            </div>
                            <div class="half-right">
                                <h2 class=""><strong></strong> <%= producto.nombre %></h2>
                                <p><%= producto.descripcion %></p>
                                <p><strong>Precio: </strong><%= producto.precio %></p>
                                <div class="botones-seccion">
                                    <div id="evaluacion">
                                        <a href="http://localhost:8080/evaluacion/" class="evaluacion-button">Detalles</a>
                                    </div>
                                    <div id="continuar">
                                        <a href="http://localhost:8080/leccion/" class="continue-button">Agregar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </ul>
            </section>
        </div>

        <div class="pagination">
            <button id="prev-page" class="btn" disabled>Anterior</button>
            <span id="current-page">1</span> / <span id="total-pages"></span>
            <button id="next-page" class="btn">Siguiente</button>
        </div>

        <div class="chatbot-container">
            <div class="chat-display" id="chat-display"></div>
            <div class="chat-input">
                <input type="text" id="user-input" placeholder="Escribe tu pregunta...">
                <button onclick="enviarPregunta()">Enviar</button>
                <button id="limpiar-btn" onclick="limpiarConversacion()">Clean<button>
            </div>
        </div>
    </main>

    <footer>
        <div class="footer-top">
            <div class="footer-logo">
                <img src="/images/logo.jpg" alt="PCBlend Logo" />
            </div>
            <div class="footer-links">
                <ul>
                    <li><a href="home.html">Inicio</a></li>
                    <li><a href="products.html">Productos</a></li>
                    <li><a href="customization.html">Personalización</a></li>
                    <li><a href="about.html">Sobre nosotros</a></li>
                    <li><a href="contact.html">Contacto</a></li>
                </ul>
            </div>
            <div class="footer-social">
                <ul>
                    <li>
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2023 PCBlend. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="../scripts/products.js"></script>
    <script src="../scripts/chatbot.js"></script>
</body>

</html>