                <i class="fas fa-bars"></i>
            </div>
        </nav>
    </header>

    <main class="container">
        <h1>Personaliza tu ensamblado</h1>

        <div class="component-selection">
            <h2>Selecciona los componentes</h2>
            <div class="component-category">
                <h3>Procesador</h3>
                <div class="card-container">
                    <div class="card">
                        <img src="/images/products/procesador1.webp" alt="Procesador 1">
                        <div class="card-content">
                            <h4>Nombre del procesador 1</h4>
                            <p>Descripción del procesador 1</p>
                            <button class="select-component" data-component="procesador" data-id="id-procesador-1">Seleccionar</button>
                        </div>
                    </div>
                    <div class="card">
                        <img src="/images/products/procesador2.webp" alt="Procesador 2">
                        <div class="card-content">
                            <h4>Nombre del procesador 2</h4>
                            <p>Descripción del procesador 2</p>
                            <button class="select-component" data-component="procesador" data-id="id-procesador-2">Seleccionar</button>
                        </div>
                    </div>
                    <!-- Agrega más tarjetas de procesadores -->
                </div>
            </div>
            <!-- Agrega más categorías de componentes (tarjeta gráfica, memoria RAM, etc.) -->
        </div>

        <div class="chatbot-container">
            <div class="chat-display" id="chat-display"></div>
            <div class="chat-input">
                <input type="text" id="user-input" placeholder="Escribe tu pregunta...">
                <button onclick="enviarPregunta()">Enviar</button>
                <button id="limpiar-btn" onclick="limpiarConversacion()">Clean<button>
            </div>
        </div>
    </main>

